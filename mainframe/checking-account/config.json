{
    "server": {
        "port": "12000"
    },
    "db": {
        "host": "mongo:27017",
        "timeout": 5,
        "prefix": "CK",
        "collections": {
            "accounts": "accounts",
            "payments": "payments"
        }
    },
    "queue": {
        "brokers": ["kafka:9092"],
        "timeout": 5,
        "topics": {
            "payments": "payments"
        }
    },
    "services": {
        "security": {
            "host": "http://security:12000",
            "timeout": 5
        },
        "users": {
            "host": "http://users:12000",
            "timeout": 5
        },
        "accounts": {
            "host": "http://accounts:12000",
            "timeout": 5
        }
    }
}
